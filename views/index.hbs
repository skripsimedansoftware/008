<div class="product-easy">
	<div class="container">
		<script src="/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
		<script type="text/javascript" src="/web/js/line/3.js"></script>
		<div class="sap_tabs">
			<div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
				<ul class="resp-tabs-list">
					<li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span>Products</span></li>
					{{!-- <li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><span>Special Offers</span></li> --}}
					{{!-- <li class="resp-tab-item" aria-controls="tab_item-2" role="tab"><span>Collections</span></li> --}}
				</ul>
				<div class="resp-tabs-container">
					{{#if products}}
					<div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
						{{#each products}}
						<div class="col-md-3 product-men">
							<div class="men-pro-item simpleCart_shelfItem">
								<div class="men-thumb-item">
									<img src="https://cf.shopee.co.id/file/{{ image }}_tn" alt="" class="pro-image-front">
									<img src="https://cf.shopee.co.id/file/{{ image }}_tn" alt="" class="pro-image-back">
									<div class="men-cart-pro">
										<div class="inner-men-cart-pro">
											<a href="{{ item_id }}" class="link-product-add-cart">Lihat Detail</a>
										</div>
									</div>
									<span class="product-new-top">{{ discount }}%</span>
								</div>
								<div class="item-info-product ">
									<h4><a href="{{ item_id }}">{{ name }}</a></h4>
									<div class="info-product-price">
										<span class="item_price">Rp.{{ price_with_discount }}</span>
										<del>Rp.{{ real_price }}</del>
									</div>
									<a href="/prediction/{{ id }}" class="item_add single-item hvr-outline-out button2">Prediksi Harga</a>
								</div>
							</div>
						</div>
						{{/each}}
						<div class="clearfix"></div>
					</div>
					{{else}}
					<center>
						<button class="btn btn-primary" id="fetch_data">Ambil Data</button>
					</center>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
</div>